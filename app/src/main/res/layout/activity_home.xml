<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/math"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            android:onClick="mathClick">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:fontFamily="monospace"
                android:text="Math"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pattern"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_below="@+id/math"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            android:onClick="patternClick">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:fontFamily="monospace"
                android:text="Pattern"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/drawing"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            android:onClick="drawingClick">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:fontFamily="monospace"
                android:text="Drawing"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/alphabets"
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_below="@+id/drawing"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:onClick="alphabetsClick"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:fontFamily="monospace"
                android:text="Alphabets"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>